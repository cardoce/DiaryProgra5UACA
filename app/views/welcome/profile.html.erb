<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-4 card">
      <article class="card-body">
        <%= image_tag( "profile.jpg", :class => "rounded mx-auto d-block")%>
        <br>
        <p class="mb-1"><%= current_user.email%></p>
        <p class="mb-1"><%= current_user.name%></p>
        <p class="mb-1"><%= current_user.lastname%></p>
    </article>
    </div>
    <div class="col-5 card">
      <article class="card-body">
        <div class="list-group">
        <% @events.each do |event| %>
          <a href="../events/1" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1"><%= event.name %></h5>
              <small><%= event.event_date %></small>
            </div>
            <p class="mb-1"><%= event.descritption %></p>
          </a>
          <% end %>
        </div>
    </article>
    </div>

    <div class="col-1">
    </div>
  </div>
</div>