<p id="alert"><%= alert %></p>
<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 card">
      <article class="card-body">
      <a href="../signup" class="float-right btn btn-outline-primary">Sign up</a>
      <h4 class="card-title mb-4 mt-1">Sign in</h4>
      <%= form_tag sessions_path do |form| %>
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, nil, placeholder: 'Email', class: 'form-control' %>
        </div>
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
        </div>
        <br>
        <div class="actions">
          <%= submit_tag "Login" , class:"btn btn-primary btn-block"%>
        </div>
      <% end %>
      </article>
    </div>
    <div class="col">
    </div>
  </div>
</div>
